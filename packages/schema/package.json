  "license": "MIT",
  "dependencies": {
    "rip-lang": "^3.10.0"
  },
  "files": [
    "index.js",
    "runtime.js",
    "orm.js",
    "lexer.js",
    "parser.js",
    "emit-types.js",
    "emit-sql.js",
    "generate.js",
    "grammar.rip",
    "README.md",
    "SCHEMA.md"
