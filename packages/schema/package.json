  "description": "Unified schema language for types, validation, database models, UI widgets, and reactive state",
  "type": "module",
  "main": "index.js",
  "bin": {
    "rip-schema": "./generate.js"
  },
  "exports": {
    ".": "./index.js",
    "./runtime": "./runtime.js",
    "./orm": "./orm.js",
    "./lexer": "./lexer.js",
    "./parser": "./parser.js",
    "./emit-types": "./emit-types.js",
    "./emit-sql": "./emit-sql.js"
  },
  "scripts": {
