{
  "name": "rip",
  "displayName": "Rip",
  "description": "Rip language support â€” syntax highlighting, types, and editor integration",
  "version": "0.3.0",
  "publisher": "rip-lang",
  "license": "MIT",
  "main": "./src/extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/shreeve/rip-lang.git",
    "directory": "packages/vscode"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "activationEvents": [
    "onLanguage:rip"
  ],
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "rip",
    "reactive",
    "types",
    "compiler"
  ],
  "icon": "icon.png",
  "contributes": {
    "languages": [
      {
        "id": "rip",
        "extensions": [".rip"],
        "aliases": ["Rip", "rip"],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icon.png",
          "dark": "./icon.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "rip",
        "scopeName": "source.rip",
        "path": "./syntaxes/rip.tmLanguage.json"
      }
    ],
    "configurationDefaults": {
      "[rip]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "diffEditor.ignoreTrimWhitespace": false
      }
    },
    "commands": [
      {
        "command": "rip.generateDts",
        "title": "Rip: Generate .d.ts for Current File"
      },
      {
        "command": "rip.generateAllDts",
        "title": "Rip: Generate .d.ts for All Files"
      }
    ],
    "configuration": {
      "title": "Rip",
      "properties": {
        "rip.types.generateOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Automatically generate .d.ts files when saving .rip files"
        },
        "rip.types.intellisense": {
          "type": "boolean",
          "default": true,
          "description": "Enable type intelligence (autocomplete, hover, go-to-definition) from third-party .d.ts files"
        },
        "rip.compiler.path": {
          "type": "string",
          "default": "",
          "description": "Path to the rip compiler binary (auto-detected if empty)"
        }
      }
    }
  }
}
