{
  "name": "rip",
  "displayName": "Rip",
  "description": "Rip language support â€” syntax highlighting, types, and editor integration",
  "version": "0.3.4",
  "publisher": "rip-lang",
  "license": "MIT",
  "main": "./dist/extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/shreeve/rip-lang.git",
    "directory": "packages/vscode"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "activationEvents": [
    "onLanguage:rip",
    "onLanguage:rip-schema"
  ],
  "categories": ["Programming Languages"],
  "keywords": ["rip", "reactive", "types", "compiler"],
  "icon": "icon.png",
  "contributes": {
    "languages": [
      {
        "id": "rip",
        "extensions": [".rip"],
        "aliases": ["Rip", "rip"],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icon.png",
          "dark": "./icon.png"
        }
      },
      {
        "id": "rip-schema",
        "extensions": [".schema"],
        "aliases": ["Rip Schema", "schema"],
        "configuration": "./schema-language-configuration.json",
        "icon": {
          "light": "./icon.png",
          "dark": "./icon.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "rip",
        "scopeName": "source.rip",
        "path": "./syntaxes/rip.tmLanguage.json"
      },
      {
        "language": "rip-schema",
        "scopeName": "source.rip-schema",
        "path": "./syntaxes/schema.tmLanguage.json"
      },
      {
        "scopeName": "rip.injection.html",
        "path": "./syntaxes/rip-html-injection.tmLanguage.json",
        "injectTo": ["text.html.basic", "text.html.derivative"],
        "embeddedLanguages": {
          "meta.embedded.block.rip": "rip"
        }
      }
    ],
    "configurationDefaults": {
      "[rip]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "diffEditor.ignoreTrimWhitespace": false
      },
      "[rip-schema]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true
      }
    }
  },
  "scripts": {
    "build": "esbuild src/extension.js --bundle --outfile=dist/extension.js --format=cjs --platform=node --external:vscode --minify && esbuild src/server.js --bundle --outfile=dist/server.js --format=cjs --platform=node --external:typescript --minify",
    "package": "bun run build && npx @vscode/vsce package --no-dependencies",
    "install-ext": "bun run package && cursor --install-extension rip-*.vsix --force"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.12"
  },
  "devDependencies": {
    "esbuild": "^0.27.3"
  }
}
