{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Rip",
  "scopeName": "source.rip",
  "fileTypes": ["rip"],
  "patterns": [
    { "include": "#comments" },
    { "include": "#heredocs" },
    { "include": "#strings" },
    { "include": "#heregex" },
    { "include": "#regex" },
    { "include": "#inline-javascript" },
    { "include": "#class-definition" },
    { "include": "#function-definition" },
    { "include": "#enum-definition" },
    { "include": "#interface-definition" },
    { "include": "#import-export" },
    { "include": "#function-assignments" },
    { "include": "#keywords" },
    { "include": "#type-operators" },
    { "include": "#reactive-operators" },
    { "include": "#arrow-operators" },
    { "include": "#special-operators" },
    { "include": "#comparison-operators" },
    { "include": "#assignment-operators" },
    { "include": "#logical-operators" },
    { "include": "#math-operators" },
    { "include": "#constants" },
    { "include": "#numbers" },
    { "include": "#instance-properties" },
    { "include": "#support-objects" },
    { "include": "#function-calls" },
    { "include": "#type-names" },
    { "include": "#properties" },
    { "include": "#identifiers" },
    { "include": "#punctuation" }
  ],
  "repository": {

    "comments": {
      "patterns": [
        {
          "name": "comment.block.rip",
          "begin": "###(?!#)",
          "end": "###"
        },
        {
          "name": "comment.line.number-sign.rip",
          "match": "#(?!\\{).*$"
        }
      ]
    },

    "heredocs": {
      "patterns": [
        {
          "name": "string.quoted.double.heredoc.rip",
          "begin": "\"\"\"",
          "end": "\"\"\"",
          "patterns": [
            { "include": "#interpolation" },
            { "include": "#string-escapes" }
          ]
        },
        {
          "name": "string.quoted.single.heredoc.rip",
          "begin": "'''",
          "end": "'''"
        }
      ]
    },

    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.rip",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            { "include": "#interpolation" },
            { "include": "#string-escapes" }
          ]
        },
        {
          "name": "string.quoted.single.rip",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.rip",
              "match": "\\\\."
            }
          ]
        }
      ]
    },

    "interpolation": {
      "patterns": [
        {
          "begin": "#\\{",
          "end": "\\}",
          "beginCaptures": { "0": { "name": "punctuation.section.embedded.begin.rip" } },
          "endCaptures": { "0": { "name": "punctuation.section.embedded.end.rip" } },
          "name": "meta.embedded.line.rip",
          "contentName": "source.rip",
          "patterns": [
            { "include": "source.rip" }
          ]
        },
        {
          "begin": "\\$\\{",
          "end": "\\}",
          "beginCaptures": { "0": { "name": "punctuation.section.embedded.begin.rip" } },
          "endCaptures": { "0": { "name": "punctuation.section.embedded.end.rip" } },
          "name": "meta.embedded.line.rip",
          "contentName": "source.rip",
          "patterns": [
            { "include": "source.rip" }
          ]
        }
      ]
    },

    "string-escapes": {
      "patterns": [
        {
          "name": "constant.character.escape.rip",
          "match": "\\\\(?:[0-7]{1,3}|x[0-9a-fA-F]{2}|u[0-9a-fA-F]{4}|u\\{[0-9a-fA-F]+\\}|[bfnrtv0'\"\\\\])"
        }
      ]
    },

    "regex": {
      "patterns": [
        {
          "name": "string.regexp.rip",
          "begin": "(?<=[=(:,\\[!&|?{;~>]|^|return|when|and|or|is|isnt|not|by)\\s*(/)",
          "end": "(/)[gimsuy]*",
          "beginCaptures": { "1": { "name": "punctuation.definition.string.begin.rip" } },
          "endCaptures": { "1": { "name": "punctuation.definition.string.end.rip" } },
          "patterns": [
            {
              "name": "constant.character.escape.rip",
              "match": "\\\\."
            }
          ]
        }
      ]
    },

    "heregex": {
      "patterns": [
        {
          "name": "string.regexp.extended.rip",
          "begin": "///",
          "end": "///[gimsuy]*",
          "patterns": [
            { "include": "#interpolation" },
            {
              "name": "comment.line.number-sign.rip",
              "match": "#.*$"
            }
          ]
        }
      ]
    },

    "inline-javascript": {
      "patterns": [
        {
          "name": "string.other.inline-js.rip",
          "begin": "`",
          "end": "`"
        }
      ]
    },

    "import-export": {
      "patterns": [
        {
          "match": "\\b(import|export|from|default|as)\\b",
          "name": "keyword.control.module.rip"
        }
      ]
    },

    "class-definition": {
      "patterns": [
        {
          "match": "\\b(class)\\s+([A-Z][a-zA-Z0-9_]*)(?:\\s+(extends)\\s+([A-Z][a-zA-Z0-9_.]*))?",
          "captures": {
            "1": { "name": "keyword.other.class.rip" },
            "2": { "name": "entity.name.type.class.rip" },
            "3": { "name": "keyword.other.extends.rip" },
            "4": { "name": "entity.other.inherited-class.rip" }
          }
        }
      ]
    },

    "function-definition": {
      "patterns": [
        {
          "match": "\\b(def)\\s+([a-zA-Z_$][a-zA-Z0-9_$]*[!?]?)",
          "captures": {
            "1": { "name": "keyword.other.def.rip" },
            "2": { "name": "entity.name.function.rip" }
          }
        }
      ]
    },

    "enum-definition": {
      "patterns": [
        {
          "match": "\\b(enum)\\s+([A-Z][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "keyword.other.enum.rip" },
            "2": { "name": "entity.name.type.enum.rip" }
          }
        }
      ]
    },

    "interface-definition": {
      "patterns": [
        {
          "match": "\\b(interface)\\s+([A-Z][a-zA-Z0-9_]*)(?:\\s+(extends)\\s+([A-Z][a-zA-Z0-9_.]*))?",
          "captures": {
            "1": { "name": "keyword.other.interface.rip" },
            "2": { "name": "entity.name.type.interface.rip" },
            "3": { "name": "keyword.other.extends.rip" },
            "4": { "name": "entity.other.inherited-class.rip" }
          }
        }
      ]
    },

    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.rip",
          "match": "\\b(if|else|unless|then|switch|when|for|while|until|loop|do|return|break|continue|throw|try|catch|finally|of|in|by|as|new|delete|typeof|instanceof|yield|await|debugger|super|extends|own|use|component|render)\\b"
        },
        {
          "name": "keyword.operator.logical.word.rip",
          "match": "\\b(and|or|not|is|isnt)\\b"
        }
      ]
    },

    "type-operators": {
      "patterns": [
        {
          "name": "keyword.operator.type.rip",
          "match": "::=|::"
        }
      ]
    },

    "reactive-operators": {
      "patterns": [
        {
          "name": "keyword.operator.assignment.reactive.rip",
          "match": "~=|:=|~>|<=>"
        },
        {
          "name": "keyword.operator.assignment.readonly.rip",
          "match": "=!"
        }
      ]
    },

    "arrow-operators": {
      "patterns": [
        {
          "name": "keyword.operator.arrow.rip",
          "match": "->|=>"
        }
      ]
    },

    "special-operators": {
      "patterns": [
        {
          "comment": "Dammit operator (call + await): identifier! or )",
          "name": "keyword.operator.dammit.rip",
          "match": "(?<=[a-zA-Z0-9_$)])!"
        },
        {
          "name": "keyword.operator.otherwise.rip",
          "match": "!\\?"
        },
        {
          "name": "keyword.operator.regex-match.rip",
          "match": "=~"
        },
        {
          "name": "keyword.operator.nullish.rip",
          "match": "\\?\\?"
        },
        {
          "name": "keyword.operator.optional-chaining.rip",
          "match": "\\?\\."
        },
        {
          "name": "keyword.operator.spread.rip",
          "match": "\\.\\.\\."
        },
        {
          "name": "keyword.operator.range.rip",
          "match": "\\.\\."
        }
      ]
    },

    "comparison-operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.rip",
          "match": "===|!==|==|!=|<=|>=|<|>"
        }
      ]
    },

    "assignment-operators": {
      "patterns": [
        {
          "name": "keyword.operator.assignment.compound.rip",
          "match": "\\+=|-=|\\*=|/=|%=|\\*\\*=|&&=|\\|\\|=|\\?\\?=|<<=|>>=|>>>=|&=|\\|=|\\^="
        },
        {
          "name": "keyword.operator.assignment.rip",
          "match": "="
        }
      ]
    },

    "logical-operators": {
      "patterns": [
        {
          "name": "keyword.operator.logical.rip",
          "match": "&&|\\|\\|"
        }
      ]
    },

    "math-operators": {
      "patterns": [
        {
          "name": "keyword.operator.arithmetic.rip",
          "match": "\\*\\*|//|%%|\\+\\+|--|[+\\-*/%]"
        },
        {
          "name": "keyword.operator.bitwise.rip",
          "match": ">>>|>>|<<|[&|^~]"
        }
      ]
    },

    "constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.rip",
          "match": "\\b(true|false|yes|no|on|off)\\b"
        },
        {
          "name": "constant.language.null.rip",
          "match": "\\b(null|undefined)\\b"
        },
        {
          "name": "constant.language.numeric.rip",
          "match": "\\b(Infinity|NaN)\\b"
        },
        {
          "name": "variable.language.this.rip",
          "match": "\\b(this)\\b"
        }
      ]
    },

    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.hex.rip",
          "match": "\\b0x[0-9a-fA-F](?:_?[0-9a-fA-F])*n?\\b"
        },
        {
          "name": "constant.numeric.octal.rip",
          "match": "\\b0o[0-7](?:_?[0-7])*n?\\b"
        },
        {
          "name": "constant.numeric.binary.rip",
          "match": "\\b0b[01](?:_?[01])*n?\\b"
        },
        {
          "name": "constant.numeric.decimal.rip",
          "match": "\\b(?:\\d+(?:_\\d+)*n|(?:\\d+(?:_\\d+)*)?(?:\\.\\d+(?:_\\d+)*)?(?:[eE][+-]?\\d+(?:_\\d+)*)?)\\b"
        }
      ]
    },

    "instance-properties": {
      "patterns": [
        {
          "match": "(@)([a-zA-Z_$][a-zA-Z0-9_$]*)",
          "captures": {
            "1": { "name": "punctuation.definition.variable.rip" },
            "2": { "name": "variable.other.readwrite.instance.rip" }
          }
        },
        {
          "name": "variable.language.this.rip",
          "match": "@(?![a-zA-Z_$])"
        }
      ]
    },

    "function-assignments": {
      "patterns": [
        {
          "comment": "Function assignment: name = (...) -> or name = ->",
          "match": "\\b([a-zA-Z_$][a-zA-Z0-9_$]*)\\s*(=)\\s*(?=\\(.*\\)\\s*[-=]>|[-=]>)",
          "captures": {
            "1": { "name": "entity.name.function.rip" },
            "2": { "name": "keyword.operator.assignment.rip" }
          }
        },
        {
          "comment": "Method in object: name: (...) -> or name: ->",
          "match": "\\b([a-zA-Z_$][a-zA-Z0-9_$]*)\\s*(:)\\s*(?=\\(.*\\)\\s*[-=]>|[-=]>)",
          "captures": {
            "1": { "name": "entity.name.function.rip" },
            "2": { "name": "punctuation.separator.key-value.rip" }
          }
        }
      ]
    },

    "function-calls": {
      "patterns": [
        {
          "comment": "Method call: .method()",
          "match": "(\\.)([a-zA-Z_$][a-zA-Z0-9_$]*)\\s*(?=[(])",
          "captures": {
            "1": { "name": "punctuation.accessor.rip" },
            "2": { "name": "entity.name.function.method.rip" }
          }
        },
        {
          "comment": "Function call: name()",
          "match": "\\b([a-zA-Z_$][a-zA-Z0-9_$]*)\\s*(?=[(])",
          "captures": {
            "1": { "name": "entity.name.function.rip" }
          }
        },
        {
          "comment": "Dammit call: name!",
          "match": "\\b([a-zA-Z_$][a-zA-Z0-9_$]*)(!)",
          "captures": {
            "1": { "name": "entity.name.function.rip" },
            "2": { "name": "keyword.operator.dammit.rip" }
          }
        }
      ]
    },

    "type-names": {
      "patterns": [
        {
          "comment": "PascalCase identifiers as types (but not after dot)",
          "match": "(?<!\\.)\\b([A-Z][a-zA-Z0-9_]*)\\b",
          "captures": {
            "1": { "name": "support.type.rip" }
          }
        }
      ]
    },

    "support-objects": {
      "patterns": [
        {
          "name": "support.class.builtin.rip",
          "match": "\\b(console|Math|JSON|Object|Array|String|Number|Boolean|Date|RegExp|Error|Map|Set|WeakMap|WeakSet|Promise|Symbol|Proxy|Reflect|Buffer|process|global|globalThis|require|module|exports)\\b"
        }
      ]
    },

    "properties": {
      "patterns": [
        {
          "comment": "Method call after dot: .name(",
          "match": "(\\.)([a-zA-Z_$][a-zA-Z0-9_$]*)\\s*(?=[(])",
          "captures": {
            "1": { "name": "punctuation.accessor.rip" },
            "2": { "name": "entity.name.function.method.rip" }
          }
        },
        {
          "comment": "Property access after dot",
          "match": "(\\.)([a-zA-Z_$][a-zA-Z0-9_$]*)",
          "captures": {
            "1": { "name": "punctuation.accessor.rip" },
            "2": { "name": "variable.other.property.rip" }
          }
        },
        {
          "comment": "Object key before colon",
          "match": "\\b([a-zA-Z_$][a-zA-Z0-9_$]*)\\s*(?=:(?![:=]))",
          "captures": {
            "1": { "name": "variable.other.property.rip" }
          }
        }
      ]
    },

    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.rip",
          "match": "\\b[a-z_$][a-zA-Z0-9_$]*\\b"
        }
      ]
    },

    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.bracket.round.rip",
          "match": "[()]"
        },
        {
          "name": "punctuation.bracket.square.rip",
          "match": "[\\[\\]]"
        },
        {
          "name": "punctuation.bracket.curly.rip",
          "match": "[{}]"
        },
        {
          "name": "punctuation.separator.comma.rip",
          "match": ","
        },
        {
          "name": "punctuation.terminator.semicolon.rip",
          "match": ";"
        }
      ]
    }
  }
}
