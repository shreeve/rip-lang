import { User, Booking, Child } from './models.rip'
import { fetchUser, fetchBookings, formatName, upcomingBookings } from './api.rip'

user = fetchUser(1)
name = formatName(user)

bookings = fetchBookings(user.id)
upcoming = upcomingBookings(bookings, 10)

for booking in upcoming
  console.log "Week #{booking.week}: #{booking.slot}"
  for child in booking.children
    console.log "  #{child.name}, age #{child.age}"
