# Home page - redirects to bookings or auth

export Home = component

  beforeMount: ->
    try
      res = await fetch('/api/user')
      data = await res.json()
      if data.user
        @router.push '/bookings'
      else
        @router.push '/auth'
    catch
      @router.push '/auth'

  render
    .('flex items-center justify-center py-20')
      p.('text-tertiary') "Loading..."
